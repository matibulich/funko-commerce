<%- include('../partials/header.ejs') %>
<body>
    <section>
        <div class="container">
            <form action="/admin/create" method="post" enctype="multipart/form-data">
                <h2 class="mt-4">CREAR NUEVO ITEM</h2>
                <div class="row mb-3 mt-4 formulario">
                    <label class="col-md-1 col-form-label" for="categoria"> Categoría:</label>
                    <div class="col-md-3 ">
                        <select class="form-select" aria-label="Seleccionar" id="categoria" name="categoria">
                            
                            <option selected value="Funkos">Funkos</option>
                       
                        </select>

                    </div>

                    <label class="col-md-1 col-form-label" for="marca"> Licencia:</label>
                    <div class="col-md-3">
                        <select class="form-select" aria-label="Licencia" id="marca" name="marca"required>
                            <option selected>Seleccionar</option>
                            <option value="1">Pokemon</option>
                            <option value="2">Harry Potter</option>
                            <option value="3">Star wars</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3 formulario">
                    <label class="col-md-2 col-form-label" for="nombre">Nombre del producto:</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                </div>

                <div class="row mb-3 formulario">
                    <div class="col-md-8">
                        <label for="product_description">Descripción del producto</label>
                        <div class="form-floating">
                            
                            <textarea class="form-control custom-text-area" id="product_description" name="product_description" style="height: 100px"></textarea>
                            
                            
                        </div>
                    </div>
                </div>

                <div class="row mb-3 formulario">
                    <label class="col-md-1 col-form-label" for="SKU" class="form-label">SKU:</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="SKU" name="SKU" required>
                    </div>

                    <label class="col-md-1 col-form-label" for="precio" class="form-label">Precio:</label>
                    <div class="col-md-2">
                        <input type="number" class="form-control"  min="0"  id="precio" name="precio" required>
                    </div>

                    <label class="col-md-1 col-form-label" for="stock" class="form-label">Stock:</label>
                    <div class="col-md-1">
                        <input type="number" min="0" class="form-control" id="stock" name="stock" required>
                    </div>
                </div>

                <div class="row mb-3 formulario">
                    <label class="col-md-1 col-form-label" for="descuento" class="form-label">Descuento:</label>
                    <div class="col-md-1">
                        <input type="number" class="form-control"  min="0" id="descuento" name="descuento" required>
                    </div>

                    <label class="col-md-1 col-form-label" for="cuotas"> Cuotas</label>
                    <div class="col-md-3">
                        <select class="form-select" aria-label="cuotas" id="cuotas" name="cuotas" required>
                            <option selected>Seleccionar</option>
                            <option value="3">3 Cuotas sin interés</option>
                            <option value="6">6 Cuotas sin interés</option>
                            <option value="12">12 Cuotas sin interés</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6 formulario">
                        <label  for="images_front">Imagen 1:
                            
                        </label>
                        <input type="file" name="images" id="images_front" multiple >
                     
                    </div>

                    
                </div>
                <div class="row mt-3 d-flex formulario">
                    <div class="col-md-3 col-sm-4 col-xs-12 col-lg-2 mb-1">
                        <button class="boton-ingresar" type="submit">Agregar producto</button>
                    </div>
            </form>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>
</body>
</html>