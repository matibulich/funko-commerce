<%- include('../partials/header.ejs') %>

<body>
  <div class="container">
    
      <div class="col-md-6 pb-4">
        <iconify-icon icon="material-symbols:search"></iconify-icon>
        <input type="text" class="form-control" placeholder="Buscar productos...">
      </div>

      <!-- Título y botón Agregar -->
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="text-uppercase">Listado de Productos</h3>
        <a href="/admin/create">
          <button type="submit" class="btn btn-success">Agregar</button>
        </a>
      </div>

      <!-- Títulos de las columnas -->
      <div class="row mt-2 bg-secondary-subtle">
        <div class="col-md-2"><span>ID</span></div>
        <div class="col-md-2"><span>SKU</span></div>
        <div class="col-md-2"><span>Nombre</span></div>
        <div class="col-md-2"><span>Marca</span></div>
        <div class="col-md-2"><span>Acciones</span></div>
      </div>

      <!-- Contenido de las filas -->
      <% data.forEach(item => { %>
      <div class="row mt-2 mb-1">
        <div class="col-md-2"><span><%= item.id_product %></span></div>
        <div class="col-md-2"><span><%= item.SKU_product %></span></div>
        <div class="col-md-2"><span><%= item.name_product %></span></div>
        <div class="col-md-2"><span><%= item.name_licence %></span></div>
        <div class="col-md-2">
          <!-- Botones de Modificar y Eliminar -->
         
          <a href="/admin/edit/<%= item.id_product %>"><button type="button" class="btn btn-sm btn-primary">
            Editar
          </button></a>
          <form method="POST" enctype="application/x-www-form-urlencoded" action="/admin/delete/<%= item.id_product %>?_method=DELETE" style="display: inline;">
            <button type="submit" class="btn btn-sm btn-danger">Borrar</button>
          </form>
        </div>
      </div>
      <% }); %>

    
  </div>

  <%- include('../partials/footer.ejs') %>
</body>

</html>