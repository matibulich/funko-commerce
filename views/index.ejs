<%- include('./partials/header.ejs')  %>

<body>
    <main>

        <section class="hero">
             <!--BANNER - NUEVOS INGRESOS-->

            <div class=" container d-flex flex-column gap-1 align-items-center  position-relative z-index: 2 "
                style="max-width: 1300px;">
                <h3 class="hero__title">Nuevos Ingresos</h3>
                <p class="hero__text">Descrubrí el próximo Funko Pop de tu colección </p>
                <a class="hero__link mt-5" href="/shop">SHOP</a>
            </div>
        </section>


        <!--INCIO COLECCIONES-->
        <section class="collection container">
            <article class="d-flex flex-column gap-2 align-items-start">
                <h3 class="collection__tittle">STAR WARS & THE MANDALORIAN</h3>
                <p class="collection__text">Disfruta de una saga que sigue agregando personajes a su colección.</p>
                <a class="collection__link" href="/shop">VER COLECCION</a>
            </article>

            <picture class="collection__cover">
                <img src="../images/star-wars/baby-yoda-1.webp" alt="baby-yoda-1">
            </picture>
        </section>
        <section class="collection container">
            <article class="d-flex flex-column gap-2 align-items-start">
                <h3 class="collection__tittle">POKEMON INDIGO</h3>
                <p class="collection__text">Atrapa todos los que puedas y disfruta de una colección llena de amigos.</p>
                <a class="collection__link" href="/shop">VER COLECCION</a>
            </article>

            <picture class="collection__cover">
                <img src="../images/pokemon/vulpix-1.webp" alt="vulpix-1">
            </picture>
        </section>
        <section class="collection container">
            <article class="d-flex flex-column gap-2 align-items-start">
                <h3 class="collection__tittle">HARRY POTTER</h3>
                <p class="collection__text">Revive los recuerdos de una saga llena de magia y encanto.</p>
                <a class="collection__link" href="/shop">VER COLECCION</a>
            </article>

            <picture class="collection__cover">
                <img src="../images/harry-potter/snape-patronus-1.webp" alt="snape-patronus-1">
            </picture>
        </section><!--FIN COLECCIONES-->


        
        <section class="slider container glide">
            <h2 class="slider__title">ÚLTIMOS LANZAMIENTOS</h2>
            <div class="glide__track" data-glide-el="track">
                <ul class="slider__items glide__slides">
                    
                    <% articulos.forEach(product => { %>                                                   
                        <li class="slider__item glide__slide">   
                            
                            <article class="card-item item-card">    
                                                              
                                <a href="/shop/item/<%= Number(product.id) %>">                                    

                                    <picture class="card-item__cover">
                                        <span class="card-item__tag">NUEVO</span> 
                                        <img  class="product-image card-item__img--front " src="/images/<%= product.images_front %> " alt="<%= product.nombre %>">
                                        <img  class="product-image card-item__img--back " src="/images/<%= product.images_back %> " alt="<%= product.nombre %>">    
                                        </picture>
                                </a>
                                
                                <p class="product-brand"><%= product.marca %></p>
                                <h4 class="product-name"><%= product.nombre %></h4>
                                <h5 class="product-price">$ <%= product.precio %></h5>
                                <p class="product-cuotas"><%= product.cuotas %> CUOTAS SIN INTERÉS</p>
                            </article>                       
                        </li>
                    <% }); %>
                   
                
                </ul>

            <div class="glide__arrows" data-glide-el="controls">
                <button class="glide__arrow glide__arrow--left" data-glide-dir="<"><iconify-icon
                        icon="ic:twotone-chevron-left"></iconify-icon></button>
                <button class="glide__arrow glide__arrow--right" data-glide-dir=">"><iconify-icon
                        icon="ic:twotone-chevron-right"></iconify-icon></button>
            </div>

        </section>
    </main>

    <%- include('partials/footer.ejs')  %>
      
</body>

</html>